<!-- login.php -->
<?php

session_start();

if (isset($_POST['submit'])) {
	$email = $_POST['email'];
	$password = $_POST['password'];

	// Perform input sanitization and validation as needed here

	// Assuming $conn is a valid MySQL database connection object
	$sql = "SELECT * FROM user_info WHERE email = '$email' AND password = '$password'";
	$result = mysqli_query($conn, $sql);

	if (mysqli_num_rows($result) == 1) {
		// Login is valid, set session variables as needed
		$row = mysqli_fetch_assoc($result);
		$_SESSION['uid'] = $row['user_id'];
		$_SESSION['uname'] = $row['name'];
		// ...
		
		// Redirect to profile page
		header('Location: profile.php');
		exit;
	} else {
		// Login failed, redirect back to login form
		header('Location: login.html');
		exit;
	}
} else {
	// Submit button was not clicked, redirect back to login form
	header('Location: login.html');
	exit;
}
?>
